        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>se.iths.helena.Education</class>
        <class>se.iths.helena.Student</class>
        <class>se.iths.helena.Course</class>
        <class>se.iths.helena.Teacher</class>
        <class>se.iths.helena.TeacherCourseRelation</class>
        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/slutprojekt"/>
            <property name="jakarta.persistence.jdbc.user" value="helena"/>
            <property name="jakarta.persistence.jdbc.password" value="Password123"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>